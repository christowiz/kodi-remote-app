{
  "name": "kodi-remote-app",
  "productName": "Kodi Remote",
  "version": "0.0.1",
  "description": "Electron app version of Kassi Chrome extension",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --icon=app/icons/kodi-1024.icns --out=releases",
    "build:custom": "electron-packager-interactive"
  },
  "keywords": [
    "Kodi",
    "remote",
    "app"
  ],
  "author": "Christopher Gwizdala",
  "license": "MIT",
  "devDependencies": {
    "electron": "^5.0.6",
    "electron-packager": "^14.0.1",
    "electron-packager-interactive": "^0.1.3",
    "electron-reload": "^1.4.0"
  }
}